<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_tip_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:text="111111111111111"
        android:textColor="@color/google_black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/remarks_font_color" />

    <TextView
        android:id="@+id/dialog_tip_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="知道了"
        android:textColor="@color/google_black"
        android:textSize="20sp" />

</LinearLayout>