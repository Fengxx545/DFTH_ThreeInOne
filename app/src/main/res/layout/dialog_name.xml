<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_device_back"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialog_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:maxLength="20"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/google_black"
        android:textSize="@dimen/standard_button_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bp_result_dialog_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_name_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/google_black"
            android:textSize="@dimen/standard_button_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bp_result_dialog_line_color" />

        <TextView
            android:id="@+id/dialog_name_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/google_black"
            android:textSize="@dimen/standard_button_text" />
    </LinearLayout>

</LinearLayout>